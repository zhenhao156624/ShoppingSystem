generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SysUser {
  user_id         Int     @id @default(autoincrement())
  phone           String  @unique
  email           String? @unique
  password        String
  receive_address String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@map("sys_user")
  Order Order[]
  ProductComment ProductComment[]
}

model Product {
  product_id    Int     @id @default(autoincrement())
  category_id   Int // 1: 电子, 2: 衣服, 3: 食物, 4: 鞋子
  product_name  String
  product_img   String?
  price         Float
  stock         Int     @default(0)
  description   String?
  status        Int     @default(1) // 0-下架, 1-上架
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("product")
  ProductComment ProductComment[]
}

model Order {
  order_id       Int      @id @default(autoincrement())
  user_id        Int
  total_amount   Float
  product_list   String   // 存储product_id列表，以逗号分隔，如 "1,2,3"
  order_status   Int      @default(0) // 0-待收货, 1-已完成, 2-已取消
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  user           SysUser  @relation(fields: [user_id], references: [user_id])

  @@map("order")
}

model ProductComment {
  comment_id   Int      @id @default(autoincrement())
  user_id      Int
  product_id   Int
  score        Int      // 评分：1-5分
  content      String?
  create_time  DateTime @default(now())

  user         SysUser  @relation(fields: [user_id], references: [user_id])
  product      Product  @relation(fields: [product_id], references: [product_id])

  @@map("product_comment")
}
