generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SysUser {
  user_id         Int     @id @default(autoincrement())
  phone           String  @unique
  email           String? @unique
  password        String
  receive_address String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@map("sys_user")
}

model Product {
  product_id    Int     @id @default(autoincrement())
  category_id   Int
  product_name  String
  product_img   String?
  price         Float
  stock         Int     @default(0)
  description   String?
  status        Int     @default(1) // 0-下架, 1-上架
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("product")
}

model Order {
  order_id     BigInt   @id @default(autoincrement())
  user_id      Int
  total_amount Float
  order_status Int      @default(0) // 0-待收货, 1-已完成, 2-已取消
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  
  user         SysUser  @relation(fields: [user_id], references: [user_id])

  @@map("orde")
}
